<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activity_Menu">



    <LinearLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/splash_IMG_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_racing_car"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_acc"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Accelerometer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_btns"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Buttom"
                app:layout_constraintEnd_toEndOf="@+id/menu_BTN_acc"
                app:layout_constraintStart_toStartOf="@+id/menu_BTN_acc"
                app:layout_constraintTop_toBottomOf="@+id/menu_BTN_acc" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_scores"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Scores"
                app:layout_constraintEnd_toEndOf="@+id/menu_BTN_btns"
                app:layout_constraintStart_toStartOf="@+id/menu_BTN_btns"
                app:layout_constraintTop_toBottomOf="@+id/menu_BTN_btns" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>




</RelativeLayout>